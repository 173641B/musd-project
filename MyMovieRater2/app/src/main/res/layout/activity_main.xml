<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_name"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/moviename"
            android:hint="@string/pname"/>
    <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_desc" tools:layout_editor_absoluteY="46dp" tools:layout_editor_absoluteX="0dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="46dp"
            tools:layout_editor_absoluteX="16dp"
            android:id="@+id/moviedesc"
            android:hint="@string/pdesc"/>
    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_lang"/>
    <RadioGroup
            android:id="@+id/radio"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RadioButton
                android:id="@+id/rbtnButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rbtn1_text"/>

        <RadioButton
                android:id="@+id/rbtnButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rbtn2_text"/>

        <RadioButton
                android:id="@+id/rbtnButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rbtn3_text"/>

        <RadioButton
                android:id="@+id/rbtnButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rbtn4_text"/>

    </RadioGroup>
    <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_date"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date1"
            android:hint="@string/pdate"/>

    <CheckBox
            android:id="@+id/myCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Box1"
            android:onClick="suitable"/>

    <TableRow
            android:id="@+id/row"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        <CheckBox
                android:visibility="invisible"

                android:id="@+id/myCheckBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Box2"/>

        <CheckBox
                android:visibility="invisible"

                android:id="@+id/myCheckBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Box3"/>

    </TableRow>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_button"
            android:onClick="addMovie"/>
</LinearLayout>